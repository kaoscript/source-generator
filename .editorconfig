root = true

[*]
indent_style = tab
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2

[test/fixtures/**/*.json]
indent_style = space
indent_size = 2

[test/fixtures/**/*.ks]
trim_trailing_whitespace = false
insert_final_newline = false
